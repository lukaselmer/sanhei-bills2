{
  "rules": {
    "admins": {
      ".read": false,
      ".write": false
    },
    "billing": {
      ".read": "root.child('admins/'+auth.uid).exists()",
      ".write": "root.child('admins/'+auth.uid).exists()",
      "bills": {
        ".indexOn": [
          "id",
          "updatedAt"
        ]
      },
      "articles": {
        ".indexOn": [
          "id",
          "updatedAt"
        ]
      },
      "billArticles": {
        ".indexOn": [
          "id",
          "updatedAt"
        ]
      }
    }
  }
}

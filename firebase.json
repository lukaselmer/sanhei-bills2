{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "cleanUrls": true,
    "trailingSlash": false,
    "public": "dist",
    "headers": [
      { "source": "/service-worker.js", "headers": [{ "key": "Cache-Control", "value": "no-cache" }] }
    ],
    "rewrites": [{ "source": "**", "destination": "/index.html" }]
  },
  "functions": {
    "runtime": "nodejs12",
    "predeploy": ["cd functions && yarn install && yarn build && cd .."]
  }
}
